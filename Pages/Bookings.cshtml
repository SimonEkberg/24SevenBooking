@page
@model BookingsModel
@using _24SevenBooking.Models
@{
    ViewData["Title"] = "Book a Room";
}

<h3>Book a Room</h3>

<form method="post" asp-page="./Bookings">
    <div class="form-group">
        <label for="RoomId">Room</label>
        <select asp-for="Booking.RoomId" class="form-control">
            @foreach (var room in Model.Rooms)
            {
                var startDate = Model.Booking?.StartDate ?? DateTime.Today;
                var endDate = Model.Booking?.EndDate ?? DateTime.Today.AddDays(1);
                var isAvailable = Model.CheckRoomAvailability(room.RoomId, startDate, endDate);

                if (isAvailable)
                {
                    <option value="@room.RoomId">@room.RoomNumber - @room.Category (Available)</option>
                }
                else
                {
                    <option value="@room.RoomId" disabled>@room.RoomNumber - @room.Category (Not Available)</option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        <label for="CustomerName">Customer Name</label>
        <input asp-for="Customer.Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input asp-for="Customer.Email" type="email" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Phone">Phone</label>
        <input asp-for="Customer.Phone" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="PersonalRegistrationNumber">Personal Registration Number</label>
        <input asp-for="Customer.PersonalRegistrationNumber" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="StartDate">Start Date</label>
        <input type="date" asp-for="Booking.StartDate" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="EndDate">End Date</label>
        <input type="date" asp-for="Booking.EndDate" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Book Room</button>
</form>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}
